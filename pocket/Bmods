function _assert() {
    #
    # $1: 条件式
    # $2: 条件式がFalseの時に出力するメッセージ
    # Reference: https://qiita.com/nannoki/items/15004992b6bb5637a9cd
    #
    eval $1
    if [[ $? == 0 ]]; then
        echo "great work!!!"
    else
        echo $2
    fi
}

function test_add () {
    _assert "$1"
}

