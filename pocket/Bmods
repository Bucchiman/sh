function update_dotfiles () {
    #
    # @Description  update dotfiles
    # @params       
    # @Example      update_dotfiles
    # @Reference    
    #


    cd $DOTFILES
    git fetch origin dev
    git merge origin/dev
    for value in ${(v)DOTFILES_SUBMODULES}; do
        cd $DOTFILES/$value
        git fetch origin dev
        git merge origin/dev
    done
    source $HOME/.zshrc
}


