    fi
    fc-cache -f -v
}

function link_all () {
    #
    # @Description  link all files at one time
    # @params       $1: pattern
    # @return 
    # @Example      link_all $HOME/source/go/bin
    # Reference:    https://qiita.com/real_yaruo/items/0a1b4a88cfd5f27f062d
    #

    ls $1 | xargs -I{} ln -s {} {}
}

